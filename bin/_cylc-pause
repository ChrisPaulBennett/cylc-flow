#!/usr/bin/python

from connectors import connector
from CylcOptionParsers import PromptOptionParser

parser = PromptOptionParser( """cylc pause [options] SYSTEM 

Pause a system, i.e. do not launch any new tasks.

With no options, pause NOW. """)

parser.add_option( "--at", 
        help="Pause each task as it reaches cycle time CYCLE.",
        metavar="CYCLE", action="store", dest="pause_time" )

(options, args) = parser.parse_args()

god = connector( parser.get_pns_host(), parser.get_groupname(), 'remote' ).get()

if options.pause_time:
    if parser.prompt( 'Pause at ' + options.pause_time + ' for'):
        god.set_hold_time( options.pause_time )

else:
    if parser.prompt( 'Pause' ):
        god.hold()
