#!/usr/bin/python

import sys
from connectors import connect_to_control


usage = """cylc pause [options] SYSTEM 

Pause a system: do not launch any new tasks."""

connector = connect_to_control( usage )

connector.parser.add_option( "--at", 
        help="Pause each task as it reaches cycle time CYCLE.",
        metavar="CYCLE", action="store", dest="pause_time" )

connector.parse_args()

controller = connector.get_control()

if connector.options.pause_time:
    if connector.prompt( 'Pause at ' + connector.options.pause_time + ' for'):
        controller.set_hold_time( connector.options.pause_time )

else:
    if connector.prompt( 'Pause' ):
        controller.hold()
