from cylc.execute import execute
from optparse import OptionParser

parser = OptionParser( usage = """cylc [db] export [OPTIONS] SOURCE [TARGET]

Export private suites to the central database.

Arguments:
    SOURCE  - suite registration""" )  

( options, args ) = parser.parse_args()

source = args[0]
if len(args) == 2:
    target = args[1]
elif len(args) == 1:
    target = args[0]
else:
    parser.error('Wrong number of arguments')

command = 'cylc db copy --export ' + source + ' ' + target
execute( command.split(' '))
