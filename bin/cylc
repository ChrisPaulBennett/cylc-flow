import os
import sys

try:
    import subprocess
    use_subprocess = True
except:
    use_subprocess = False
    print "+++++++++++++++++++++++++++++++++++++++++++++++"
    print "WARNING: UNABLE TO IMPORT THE SUBPROCESS MODULE"
    pyver = sys.version_info
    if pyver < (2, 4):
        print "  (subprocess was introduced in Python 2.4)"
    print "Cylc will use os.system to invoke subprocesses,"
    print "but it cannot check for successful invocation."
    print "+++++++++++++++++++++++++++++++++++++++++++++++"
    print

# auto-replace with version tag at build/install:
cylc_version = "THIS IS NOT A VERSIONED RELEASE"

allowed_commands = \
    [ 
    'help',
    'configure',
    'register',
    'start', 
    'restart',
    'stop',
    'pause',
    'resume',
    'lock',
    'unlock',
    'insert',
    'reset',
    'kill',
    'purge',
    'view',
    'show',
    'info',
    'ping',
    'task-started',
    'task-message',
    'task-finished',
    'task-failed',
    'submit',
    'lockserver',
    'preferences',
    'verbosity',
    'nudge',
    'test',
    'suicide',
    'monitor',
    'message',
    ]

usage = \
    [ 
    'USAGE: cylc [options] COMMAND [command-options] ',
    '',
    'This is the commandline interface to the cylc self-organising adaptive',
    'multicycling forecast systems metascheduler. Cylc is pronounced \'silk\'.',
    '',
    'See also: cylcutil --help',
    '',
    'options:',
    ' -v, --version  Print the release version tag and exit.',
    ' -h, --help     Print this usage message and exit.',
    '',
    'command-options:',
    '  cylc COMMAND --help',
    '',
    'COMMANDS:',
    'S-Y-S-T-E-M--P-R-E-P-A-R-A-T-I-O-N',
    '  configure ... Create a cylc suite from a set of task definitions',
    '  register .... Register a configured suite for use under a given name',
    'S-Y-S-T-E-M--C-O-N-T-R-O-L',
    '  start ....... Start scheduling a registered suite',
    '  restart ..... Restart a suite that was previously shut down',
    '  stop ........ Shut down a running suite, or set a final cycle time',
    '  pause ....... Refrain from submitting tasks that are ready to run',
    '  resume ...... Resume submitting tasks that are ready to run',
    '  lock ........ Refuse to comply with subsequent intervention commands',
    '  unlock ...... Comply with subsequent intervention commands',
    'T-A-S-K--C-O-N-T-R-O-L',
    '  insert ...... Insert a task or task group into a running suite',
    '  reset ....... Reset a task to the waiting, ready, or finished states',
    '  kill ........ Remove tasks from a running suite, once or permanently',
    '  purge ....... Recursively kill a task and its downstream dependants',
    'I-N-F-O-R-M-A-T-I-O-N',
    '  view ........ Start the Cylc Suite Monitor GUI',
    '  show ........ Retrieve information from a running suite',
    '  info ........ Retrieve information from a registered suite',
    '  ping ........ Check if a suite is running, or list all suites that are',
    'T-A-S-K--I-N-T-E-R-F-A-C-E',
    '  task-started ... Acquire a lock from the lockserver, and report started',
    '  task-message ... Report completion of outputs, and other messages',
    '  task-finished... Release lock to the lockserver, and report finished',
    '  task-failed .... Release lock to the lockserver, and report failure',
    'M-I-S-C-E-L-L-A-N-E-O-U-S',
    '  submit ...... Submit a single task to run just as the scheduler would',
    '  lockserver .. Control the cylc lockserver daemon',
    '  preferences . Manage your .cylcrc global preferences',
    '  verbosity ... Change the logging verbosity level in a running suite',
    '  nudge ....... Cause the main task processing loop to be invoked',
    '  suicide ..... Suggest that an inquiring task should shut itself down',
    '  monitor ..... Terminal based suite monitor (DEPRECATED, use "cylc view")',
    '  message ..... Task message interface (DEPRECATED, use task-started etc.)',
    '  test ........ Run an automated test of core cylc functionality',
    '  help ........ Print this usage message and exit; also [-h], [--help]',
    ]

def print_usage():
    for line in usage:
        print line

# check that the cylc core modules are accessible
try:
    import requisites
except:
    print >> sys.stderr, "ERROR: the cylc core modules are not accessible to Python"
    print >> sys.stderr, "Please add [cylc-top-dir]/src to your $PYTHONPATH." 
    sys.exit(1)

if len( sys.argv ) < 2:
    # COMMAND must be supplied
    print_usage()
    sys.exit(1)

if sys.argv[1] == '-h' or sys.argv[1] == '--help':
    print_usage()
    sys.exit(0)

if sys.argv[1] == '-v' or sys.argv[1] == '--version':
    print cylc_version
    sys.exit(0)

# SECRET COMMAND USED IN AUTO DOCUMENT PROCESSING
if sys.argv[1] == 'commands':
    for command in allowed_commands:
        print command
    sys.exit(0)

# first argument must be COMMAND
command = sys.argv[1]
if command not in allowed_commands:
    print "ERROR, illegal cylc command: " + command
    print "Use 'cylc --help' to see legal commands"
    sys.exit(1)

if command == 'help': 
    print_usage()
    sys.exit(0)

# remaining arguments must be command options
if len( sys.argv ) == 1:
    command_options = []
else:
    command_options = sys.argv[2:]

# construct command to execute
execute = ''

# construct the actual command name
command = '_cylc-' + command 

# subprocess.call() takes a list: [ command, arg1, arg2, ...]
execute = [ command ]
for f in command_options:
    execute.append( f )

if use_subprocess:
    try:
        retcode = subprocess.call( execute )
        if retcode != 0:
            # the command returned non-zero exist status
            print >> sys.stderr, command + ' failed: ', retcode
            sys.exit(1)

    except OSError:
        # the command was not invoked
        print >> sys.stderr, 'ERROR: unable to execute ' + command
        print >> sys.stderr, ' * Have you sourced $CYLC_DIR/cylc-env.sh?'
        print >> sys.stderr, " * Are all cylc scripts executable?"
        print >> sys.stderr, " * Have you run 'cylc configure' yet?"
        sys.exit(1)
else:
    command = ' '.join(execute)
    os.system( command )
