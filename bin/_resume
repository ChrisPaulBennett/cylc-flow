import os
import check_switch
import cylc_pyro_client
from CylcOptionParsers import PromptOptionParser

parser = PromptOptionParser( """cylc resume [options] SUITE 

Resume running a paused suite, or unset an upcoming stop time.""" )

(options, args) = parser.parse_args()

suite = parser.get_suite_name()
owner = os.environ['USER']
host = options.host
port = options.port

if parser.prompt( 'Resume' ):
    proxy = cylc_pyro_client.client( suite, owner, host, port ).get_proxy( 'remote' )
    check_switch.check( proxy.resume( owner ))
