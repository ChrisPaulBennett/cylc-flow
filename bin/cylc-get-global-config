import sys
from optparse import OptionParser
from cylc.global_config import globalcfg

parser = OptionParser( usage = """cylc [admin] get-global-config 

Print settings parsed from the site and user configuration files:
1) $CYLC_DIR/conf/site/site.rc # non user-overrideable settings
2) $CYLC_DIR/conf/user/cylc.rc # default user settings for the site
3) $HOME/.cylc/cylc.rc         # option user settings 

Currently no options, the command just prints all items.""" )

(options, args) = parser.parse_args()
if len(args) != 0:
    parser.error( "ERROR: wrong number of arguments" )

globals = globalcfg()
globals.dump()

