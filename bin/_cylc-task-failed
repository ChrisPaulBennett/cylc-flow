""" 
Documentation
"""

import sys
from optparse import OptionParser
from task_message import message
from task_lock import lock

usage = """cylc task-failed [options] [REASON]

Tell cylc that the calling task has failed. 

arguments:
    REASON  - message explaining why the task failed.
"""

parser = OptionParser( usage )

( options, args ) = parser.parse_args()

if len( args ) == 0:
    reason = None
else:
    reason = ' '.join( args )

lock().release()
message( reason ).send_failed()
