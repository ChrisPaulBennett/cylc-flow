from cylc.execute import execute
from optparse import OptionParser

parser = OptionParser( usage = """cylc [db] import [OPTIONS] SOURCE [TARGET] DIR

Import suites from the central registration database.

Arguments:
    SOURCE    - Central database registration
    [TARGET]  - Private database registration
                (omit TARGET to keep the central reg)
    DIR       - top level directory for the imported suite definition.""" )

( options, args ) = parser.parse_args()

if len(args) != 2 and len(args) != 3:
    parser.error('Illegal number of arguments')

source = args[0]
if len(args) == 3:
    target = args[1]
    dir = args[2]
elif len(args) == 2:
    target = source
    dir = args[1]

command = 'cylc db copy --import ' + source + ' ' + target + ' ' + dir
execute( command.split(' '))
