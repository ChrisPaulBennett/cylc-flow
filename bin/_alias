import os, re, sys
from optparse import OptionParser
from cylc.registration import localdb, RegistrationError
from cylc.config import get_suite_title, SuiteConfigError

parser = OptionParser( usage = """cylc [db] alias [options] SUITE ALIAS 

Define a short alias for a full suite registeration. This differs from 
simply registering the target suite under a different name - at run time
the run time suite identity variables ($CYLC_SUITE etc.) will refer to
the original suite registration.

Arguments:
     SUITE  -  Private suite database registration.
     ALIAS  -  An alternative name for the same suite.""" )

( options, args ) = parser.parse_args()

if len(args) != 2:
    parser.error( "Wrong number of arguments" )

# NEW REGISTRATION: cylc register SUITE PATH
suite = args[0]
alias = args[1]

reg = localdb()
try:
    reg.lock()
    reg.load_from_file()
    reg.alias( suite, alias )
    reg.dump_to_file()
    reg.unlock()
except RegistrationError, x:
    print >> sys.stderr, x
    reg.unlock()
    sys.exit(1)
