import cycle_time
from connector import connector
from CylcOptionParsers import PromptOptionParser

parser = PromptOptionParser( """cylc kill [options] SYSTEM 

Remove a single task proxy object from the system. The task will be
forced to spawn before dying unless you specify '--no-spawn'.

WARNING: This kills task proxy objects in the scheduler, NOT running
external tasks!""" )

parser.add_option( "-t", 
        help="ID of the task to kill.",
        metavar="TASK%CYCLE", action="store", dest="kill_id" )

parser.add_option( "--no-spawn", 
        help="Do not spawn before dying.",
        action="store_true", default=False, dest="no_spawn" )

(options, args) = parser.parse_args()

if not options.kill_id:
    parser.error( "Task ID required" )

target = options.kill_id  
# check inputs
( name, cycle ) = target.split('%')
if not cycle_time.is_valid( cycle ):
    parser.error( "invalid cycle time: " + cycle )

if parser.prompt( 'Kill task ' + target + ' in'):
    god = connector( parser.get_pns_host(), parser.get_groupname(), 'remote' ).get()
    if options.no_spawn:
        print god.die( target )
    else:
        print god.spawn_and_die( target )
