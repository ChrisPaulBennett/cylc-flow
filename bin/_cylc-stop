#!/usr/bin/python

import sys
from connectors import connect_to_control


usage = """cylc stop [options] SYSTEM 

Shut down a cylc system after all currently running tasks have finished."""

connector = connect_to_control( usage )

connector.parser.add_option( "--now", 
        help="Shutdown the system NOW, even if tasks are still running. "
        "NOTE THAT THIS DOES NOT KILL RUNNING EXTERNAL TASKS",
        action="store_true", default=False, dest="shutdownnow" )

connector.parser.add_option( "--at", 
        help="Do not launch any new tasks beyond CYCLE, and "
        "shut the system down when all tasks reach that cycle.",
        metavar="CYCLE", action="store", dest="stop_time" )

connector.parse_args()

controller = connector.get_control()

if connector.options.stop_time:
    if connector.prompt( 'Set stop time ' + connector.options.stop_time + ' for'):
        controller.set_stop_time( connector.options.stop_time )

elif connector.options.shutdownnow:
    if connector.prompt( 'Shutdown NOW' ):
        controller.shutdown_now()

else:
    if connector.prompt( 'Shutdown' ):
        controller.shutdown()
