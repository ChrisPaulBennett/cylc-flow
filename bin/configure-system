#!/bin/bash

# given a cyclon system definition directory:
#    system/user_config.py
#    system/taskdef/(task definition files)

# 1/ generate task class code for cyclon
# 2/ generate system environment script 
#    + this exports PATH and PYTHONPATH, and 
#      CYCLON_ENV (its own path) for system scripts
#      and CYCLON_BIN for utility scripts
# 3/ copy task-wrapper from cyclon/bin to system/scripts

set -e  # ABORT on error

[[ $# != 1 ]] && {
	echo "USAGE: $0 <system definition dir>"
	echo "run in cyclon top level directory"
	exit 1
}

[[ ! -f bin/cyclon ]] && {
	echo "RUN THIS IN CYCLON REPO TOP LEVEL"
	exit 1
}

SYSDIR=$1
# remove any trailing '/'
SYSDIR=${SYSDIR%/}

ENV_SCRIPT='environment.sh'

TOPDIR=$PWD

# access to cyclon bin/ for this script
PATH=$PWD/bin:$PATH

cd $SYSDIR

echo
echo "Generating $SYSDIR/task_classes.py"

# if the command line gets too big we'll have to use xargs:
#    find taskdef -name '*.def' -o -name '*.py' | xargs task-generator.py 
# and modify task-generator.py so that it appends to the output
# task_classes.py file rather than overwriting it each time.
task-generator.py $( find taskdef -name '*.def' -o -name '*.py' ) 

echo
echo "Generating environment script for this system:"
echo "     $SYSDIR/environment.sh"

cat > $ENV_SCRIPT <<EOF
#!/bin/bash

# AUTO-GENERATED BY $0

# source this to set PATH and PYTHONPATH 
# for running cyclon on system $SYSDIR

# clean existing cyclon paths
      PATH=\$( $TOPDIR/bin/clean-cyclon-path.sh \$PATH )
PYTHONPATH=\$( $TOPDIR/bin/clean-cyclon-path.sh \$PYTHONPATH )

# not using \$HOME or relative path; may be sourced by other users
PATH=$TOPDIR/bin:$TOPDIR/$SYSDIR/scripts:\$PATH
PATH=\${PATH%:}  # in case variable was empty before
PYTHONPATH=$TOPDIR/src:$TOPDIR/$SYSDIR:\$PYTHONPATH
PYTHONPATH=\${PYTHONPATH%:}  # in case was empty before
export PATH PYTHONPATH

# export my location as \$CYCLON_ENV
export CYCLON_ENV=$TOPDIR/$SYSDIR/$ENV_SCRIPT

# export cyclon bin path for utility scripts
export CYCLON_BIN=$TOPDIR/bin
EOF

# copy task-wrapper

echo
echo "Copying task-wrapper to system scripts dir"
mkdir -p $TOPDIR/$SYSDIR/scripts
cp $TOPDIR/bin/task-wrapper $TOPDIR/$SYSDIR/scripts

echo
echo "SOURCE THE SYSTEM ENVIRONMENT SCRIPT BEFORE RUNNING CYCLON"
echo "  \$ . $TOPDIR/$SYSDIR/environment.sh"
echo "  \$ cyclon"
echo
