#!/usr/bin/env python

import os, sys
import cylc_pyro_client
from CylcOptionParsers import PromptOptionParser
from port_scan import SuiteIdentificationError

parser = PromptOptionParser("""cylc lock [options] SUITE 

Tell a running suite that is configured to use crude safety locking 
(see suite.rc documentation) not to comply with subsequent intervention
commands. The lock/unlock commands are a safety device to help guard
against inadvertant intervention in a suite.

Suites can also be configured to require a secure passphrase for access.

This is unrelated to the functionality provided by the cylc lockserver,
which prevents multiple instances of a task or suite from running
simultaneously.""")

(options, args) = parser.parse_args()

if len(args) != 1:
    parser.usage() 
    sys.exit(1)

suite = parser.get_suite_name()
owner = os.environ['USER']
host = options.host
port = options.port

try:
    proxy = cylc_pyro_client.client( suite, owner, host, port ).get_proxy( 'remote' )
except SuiteIdentificationError, x:
    raise SystemExit(x)

if not parser.prompt( 'Lock' ):
    sys.exit(0)

result = proxy.lock()

if result.success:
    print result.reason
else:
    print 'ERROR:', result.reason
    sys.exit(1)
