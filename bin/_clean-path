#!/bin/bash

# Clean existing cylc paths from a supplied PATH variable.
# This is used by cylc-env.sh to configure a shell environment
# on-the-fly for a cylc instance different to that set up in 
# the users login scripts.

[[ $# > 1 ]] && {
	# ok to call for empty variables
	echo "USAGE: $0 <PATH-variable>"
	exit 1
}

IN_PATH=$1
OUT_PATH=''

OIFS=$IFS
IFS=':'
for P in $IN_PATH; do
	if [[ $P !=  *cylc* ]]; then
		OUT_PATH=${OUT_PATH}:$P
	fi
done
IFS=$OIFS

OUT_PATH=${OUT_PATH#:}
OUT_PATH=${OUT_PATH%:}

echo $OUT_PATH
