#!/usr/bin/python

from connectors import connector
from CylcOptionParsers import PromptOptionParser

parser = PromptOptionParser( """cylc reset [options] SYSTEM 

Reset a single task to the "waiting" state.""" )

parser.add_option( "-t", 
        help="ID of the task to reset.",
        metavar="TASK%CYCLE", action="store", dest="reset_id" )

(options, args) = parser.parse_args()

if options.reset_id:
    if parser.prompt( 'Reset task ' + connector.options.reset_id + ' in'):
        god = connector( parser.get_pns_host(), parser.get_groupname(), 'remote' ).get()
        god.reset_to_waiting( connector.options.reset_id )

else:
    parser.error( "Task ID required" )
