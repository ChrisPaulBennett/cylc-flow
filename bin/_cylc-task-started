""" 
Documentation
"""

import sys
from optparse import OptionParser
from task_message import message
from lockserver import lock

usage = """cylc task-started [options]

Tell cylc that the calling task has started running. 
"""

parser = OptionParser( usage )

( options, args ) = parser.parse_args()

if len( args ) != 0:
    print >> sys.stderr, "WARNING: ignoring task-started arguments:"
    for arg in args:
        print sys.stderr, arg

message().send_started()

if not lock().acquire():
    print >> sys.stderr, "ERROR: Failed to acquire a task lock"
    message().send_failed()
    sys.exit(1)
