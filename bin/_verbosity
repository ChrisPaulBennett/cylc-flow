import os,sys
import check_switch
import cylc_pyro_client
from CylcOptionParsers import PromptOptionParser

parser = PromptOptionParser( """cylc verbosity [options] SUITE LEVEL

Change the logging level of a running suite.  Note that if you choose
'warning', for example, only warning messages and worse will be logged.
The 'info' level is appropriate under most circumstances.""",
['LEVEL                debug, info, warning, error, or critical'] )

vchoices = ['debug','info', 'warning', 'error', 'critical'] 

(options, args) = parser.parse_args()

if len( args ) != 2:
    parser.error( "suite name and logging level required." )

verbosity = args[1]
if verbosity not in vchoices:
    parser.error( "Illegal logging level, " + verbosity )

suite = parser.get_suite_name()
owner = os.environ['USER'] 
host = options.host
port = options.port

if parser.prompt( "Set logging level to " + verbosity + " in " ):
    proxy = cylc_pyro_client.client( suite, owner, host, port ).get_proxy( 'remote' )
    check_switch.check( proxy.set_verbosity( verbosity, owner ))
