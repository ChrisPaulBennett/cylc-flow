import os
import check_switch
import cylc_pyro_client
from CylcOptionParsers import PromptOptionParser

parser = PromptOptionParser( """cylc set-level [options] SYSTEM 

Change the logging verbosity level of a running system (default is INFO).""" )

vchoices = ['debug','info', 'warning', 'error', 'critical'] 
parser.add_option( "-l", "--level",
        help="Logging level: " + ', '.join(vchoices),
        action="store", choices=vchoices, dest="verbosity" )

(options, args) = parser.parse_args()

if not options.verbosity:
    parser.error( "Logging level required." )

if parser.prompt( "Set logging level to " + options.verbosity + " in " ):
    host = parser.get_pns_host()
    group = parser.get_groupname()
    user = os.environ['USER'] 

    god = cylc_pyro_client.client( host, group ).get_proxy( 'remote' )
    check_switch.check( god.set_verbosity( options.verbosity, user ))
