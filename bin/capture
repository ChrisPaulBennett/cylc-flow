#!/usr/bin/env python

from tailer import tailer
import gtk
import gobject
import tempfile
from time import sleep
import os, re, sys
from warning_dialog import warning_dialog, info_dialog
import subprocess
import threading

"""Run a command as a subprocess and capture the resulting stdout and
stderr to display in a dialog. Examples:
    $ capture "echo foo"
    $ capture "echo foo; echo bar" &
"""

class info(object):
    def __init__( self, command_list, stdout, stderr ):
        window = gtk.Window(gtk.WINDOW_TOPLEVEL)
        #window.set_size_request(200, 200)
        window.set_border_width( 5 )
        window.set_title( 'command capture' )
        window.connect("delete_event", self.quit)
        window.set_size_request(600, 600)

        sw = gtk.ScrolledWindow()
        sw.set_policy( gtk.POLICY_NEVER, gtk.POLICY_AUTOMATIC )

        textview = gtk.TextView()
        textview.set_editable(False)
        textview.set_wrap_mode( gtk.WRAP_WORD )

        tb = textview.get_buffer()
        blue = tb.create_tag( None, foreground = "darkblue" )
        red = tb.create_tag( None, foreground = "red" )
       
        command = ' '.join( command_list )
        tb.insert_with_tags( tb.get_end_iter(), command + '\n\n', blue )

        vbox = gtk.VBox()
        sw.add(textview)
        vbox.add(sw)
        ok_button = gtk.Button( "Close" )
        ok_button.connect("clicked", self.quit, None, None )
        vbox.pack_start(ok_button, False)
        window.add(vbox)
        window.show_all()

        proc = subprocess.Popen( command_list,
            stdout=stdout, stderr=stderr, shell=True )

        self.stdout_updater = tailer( textview, stdout.name )
        self.stdout_updater.start()

        self.stderr_updater = tailer( textview, stderr.name, tag=red )
        self.stderr_updater.start()


    def quit( self, w, e, data=None ):
        self.stdout_updater.quit = True
        self.stderr_updater.quit = True
        gtk.main_quit()

if __name__ == '__main__':
    command_list = sys.argv[1:]
    gobject.threads_init()
    tmp_stdout = tempfile.NamedTemporaryFile( dir = os.environ['TMPDIR'] )
    tmp_stderr = tempfile.NamedTemporaryFile( dir = os.environ['TMPDIR'] )
    info( command_list, tmp_stdout, tmp_stderr )
    gtk.main()


