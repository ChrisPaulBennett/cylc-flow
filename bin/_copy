from cylc.mkdir_p import mkdir_p
import os, re, sys
from shutil import copytree
from optparse import OptionParser
from cylc.registration import localdb, RegistrationError, SuiteTakenError
from cylc.regprompt import prompt

parser = OptionParser( usage = """cylc [db] copy|cp [OPTIONS] FROM TO TOPDIR

Copy suites or group of suites in your private suite database. Note that 
you can also register an existing suite under a different name (cylc
register) or alias (cylc alias).  Groups of suites are copied to 
sub-directories of TOPDIR by translating the registration path into
a directory path.

Arguments:
    FROM, TO - private suite or group registrations
    DIR      - destination for the copied suite definition(s).""" )

parser.add_option( "--dry-run",
        help="Show what would be copied.",
        action="store_true", default=False, dest="dryrun" )


( options, args ) = parser.parse_args()

if len(args) != 3:
    parser.error('Wrong number of arguments')

arg_from = args[0].rstrip(':')
arg_to = args[1].rstrip(':')
arg_dir = args[2]

db = localdb()

try:
    db.lock()
    db.load_from_file()

    fsuites = db.get_list( '^' + arg_from + r'\b' )
    if len(fsuites) == 0:
        raise RegistrationError, 'ERROR, no suites matched: ' + suites_from

    if options.dryrun:
        print 'DRY RUN, I would copy:'

    for fsuite in fsuites:
        fsuite, fdir, ftitle = fsuite

        treg = re.sub( r'\b' + arg_from + r'\b', arg_to, fsuite ) 

        tmp = re.sub( arg_to + ':', '', treg ) 
        tdir = '/'.join( tmp.split(':') )
        tdir = os.path.join( arg_dir, tdir )

        print fsuite, "-->", treg, 'in', tdir
        if options.dryrun:
            continue

        try:
            db.register( treg, tdir, ftitle )
        except SuiteTakenError, x:
            print >> sys.stderr, 'WARNING, ' + str(x)
            continue

        if os.path.exists( tdir ):
            print >> sys.stderr, 'WARNING: skipping copy, directory already exists: ' + tdir
            continue

        # HUH?: os.path.dirname(ldir), below, returns an empty string.

        tdir = os.path.abspath( tdir )
        try:
            mkdir_p( os.path.dirname(tdir))
        except Exception,x:
            print >> sys.stderr, x
            db.unregister(treg)
            continue

        print 'Copying suite definition for', treg 
        try:
            copytree( fdir, tdir )
        except OSError, x:
            print >> sys.stderr,x
            db.unregister( treg )
            continue

    db.dump_to_file()
    db.unlock()

except RegistrationError, x:
    print >> sys.stderr, x
    db.unlock()
    sys.exit(1)
