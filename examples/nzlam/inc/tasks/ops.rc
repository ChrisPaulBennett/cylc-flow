[[OPS]] #---------------------------------------------------------------
    # OPS task family
    # In member task [[[directives]]]:
    #  + OPS, VAR <JOB>_init require $LOGNAME in loadleveler => COPY_ALL

[[OPS_AIRS]] #----------------------------------------------------------
    description = Extract and Process AIRS obs
    command = OPS-wrapper.sh
    [[[environment]]]
        OPSUI_JOB_DIR = $CYLC_SUITE_DIR/jobdirs/ops/oaamb
%include inc/vars/ops.rc
    [[[directives]]]
        environment = COPY_ALL

