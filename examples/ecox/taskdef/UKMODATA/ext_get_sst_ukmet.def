# THIS IS A CYLC TASK CLASS DEFINITION FILE

%TASK
    ext_get_sst_ukmet, e_g_s_uk

%DESCRIPTION
    Get the UK MetOffice sst file

%TYPE
    free, sequential

%OWNER
    ecoconnect

%HOURS
    6

%ENVIRONMENT
    SRCE    ftpops.metoffice.gov.uk
    SRCE_LOC    ~/
    DEST_LOC    ${HOME}/output
    FILENAME    sst.${CYCLE_TIME}.anc.gz 
    SRCE_USER   niwa
    SERVICE ext_get_sst_ukmet
    KEEP    1
    FAST    1
    FILEOUT sst.${CYCLE_TIME}.anc.gz
    TIMEOUT 45
    CHECKSUM    0
    CHECKFILE   None

%COMMAND
    cylc-wrapper file_transfer_ftp.sh
                                
%PREREQUISITES
    "SST file available for download for ${CYCLE_TIME}"

%OUTPUTS
    "SST file downloaded for ${CYCLE_TIME}"
