    SERVICE ext_check_globalice_ukmet
    TIMEOUT 60

%COMMAND
    cylc-wrapper file_check_ftp.sh

%PREREQUISITES
    # NONE

%OUTPUTS
    "GLOBALICE file available for download for ${CYCLE_TIME}"
