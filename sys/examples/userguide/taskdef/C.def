# THIS IS A CYLC TASK DEFINITION FILE

%NAME
    storm_surge, C

%DESCRIPTION
    Storm surge forecast model.
    Generates restart files for the next two cycles.

%TYPE
    tied

%CYCLES
    0,6,12,18

%TASK
    C.sh

%ENVIRONMENT
    ANALYSIS_TIME $(CYLC_TIME)
    NEXT_ANALYSIS_TIME $(CYLC_TIME + 6)
    NEXT_NEXT_ANALYSIS_TIME $(CYLC_TIME + 12)

%PREREQUISITES
    "surface pressure field ready for $(CYLC_TIME)"
    "surface wind fields ready for $(CYLC_TIME)"

%ESTIMATED_RUN_TIME
    120

%ESTIMATED_RESTART_OUTPUT_TIMES
    40, 80

%OUTPUTS
    110: "storm surge fields ready for $(CYLC_TIME)"
