# and more complete documentation of entries.

%NAME
    global_circulation_model

%TYPE
    # task type determines behaviour
    forecast_model 

%OWNER
    # optional; submit the external task as this username
    bob 

%VALID_HOURS
    # nominal analysis times each day for this task
    0,6,12,18

%EXTERNAL_TASK
    # the real task that this proxy represents and manages
    run-gcw.sh

%PREREQUISITES
    # prerequisites that must be satisfied before this task can run
    file global-start-dump_$(MY_REFERENCE_TIME).nc ready
    file global-increments_$(MY_REFERENCE_TIME).nc ready

%RUN_LENGTH_MINUTES
    # estimated run time used by cylc in dummy mode
    20 

%RESTART_LIST_MINUTES
    # estimated time(s) at which this task completes 'restart'
    # outputs required by its successor(s).
    5,10

%OUTPUTS
    # task outputs and their estimated completion times.
    18: file gcw_fields_$(MY_REFERENCE_TIME).nc ready
