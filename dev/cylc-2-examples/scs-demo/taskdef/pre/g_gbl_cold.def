# THIS IS A CYLC TASK DEFINITION FILE


%TASK
    g_gbl_cold

%DESCRIPTION
    Get the downloaded UM global dump for a cold start this cycle

%TYPE
    free, contact, oneoff

%CONTACT_DELAY
    4.0 hr

%HOURS
    6

%COMMAND
    file_transfer.sh

%ENVIRONMENT
    TARG ftpserver:/download/globaldump.$(CYCLE_TIME).um
    DEST hpc:/oper/input/

%COLDSTART_PREREQUISITES
    "startup%$(CYCLE_TIME) finished"

%PREREQUISITES
    # NONE

%OUTPUTS
    "global model dump ready for $(CYCLE_TIME)"
