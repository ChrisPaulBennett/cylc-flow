
[scheduling]
    initial cycle time = 1
    final cycle time = 9
    [[special tasks]]
        start-up = start
    [[dependencies]]
        [[[ R1/c0/P2 ]]]
            # once at T0
            graph = start
        [[[ R/1/P2 ]]]
            # repeat with step 2, from T0 + 1
            graph = "start & foo[T-2] => foo"
        [[[ R/3/P2 ]]]
            # repeat with step 2 from T0 + 3
            graph = "foo => bar"
        [[[ R2/c4/c6 ]]]
            # repeat twice, at 4 and 6
            graph = "foo => qux"
        [[[ R1/c8/P2 ]]]
            # once at 8
            graph = "bar => stop"

[visualization]
    default node attributes = "style=filled", "shape=box"
    use node color for edges = False
    [[node attributes]]
        bar = "fillcolor=skyblue"
        qux = "fillcolor=limegreen"
        start = "fillcolor=lemonchiffon"
        stop = "fillcolor=orange"
