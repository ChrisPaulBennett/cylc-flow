
[scheduling]
    initial cycle time = 1
    final cycle time = 16
    runahead factor = 4 
    cycling = integer
    [[special tasks]]
        sequential = seq
    [[dependencies]]
        [[[ R/c0/P3 ]]]
            graph = """
             seq => foo        # sequential task
        foo[T-3] => foo        # prev instance trigger
             foo => bar        # plain trigger
        woo[T+1] => foo        # implicit prev cycle
        woo[T-1] => foo        # implicit next cycle

        foo[T-3]:out1 => on_toast # message outputs
                    """
        [[[ R/c6/P6 ]]]
            graph = """
         foo[T-3] => qux       # every second cycle
                    """
[runtime]
    [[foo]]
        command scripting = """
sleep 5
cylc task message "the cheese is ready for $(( CYLC_TASK_CYCLE_TIME + 3 ))"
sleep 5
                            """
        [[[outputs]]]
            out1 = "the cheese is ready for [T+3]"

[visualization]
    default node attributes = "style=filled"
    [[node attributes]]
        foo = "fillcolor=slateblue"
        woo = "fillcolor=limegreen"
        bar = "fillcolor=orange"
        seq = "fillcolor=navajowhite"
        on_toast = "fillcolor=beige"
        qux = "fillcolor=orangered"

