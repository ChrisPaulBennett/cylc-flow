# THIS IS A CYLC TASK CLASS DEFINITION FILE

%TASK
    ext_get_globalice_ukmet, e_g_gi_uk

%DESCRIPTION
    Get the UK MetOffice globalice file

%TYPE
    free, sequential

%OWNER
    ecoconnect

%HOURS
    0

%ENVIRONMENT
    HH  ${CYCLE_TIME:8:2}
    SRCE    ftpops.metoffice.gov.uk
    SRCE_LOC    ~/
    DEST_LOC    ${HOME}/output
    FILENAME    qwgl.daily.${CYCLE_TIME}.ice.gz
    SRCE_USER   niwa
    SERVICE ext_get_globalice_ukmet
    KEEP    1
    FAST    1
    FILEOUT qwgl_daily_${CYCLE_TIME}_ice.gz
    TIMEOUT 45
    CHECKSUM    1
    CHECKFILE   ${CYCLE_TIME}_ice_checksum.txt 

%COMMAND
    cylc-wrapper file_transfer_ftp.sh
                                
%PREREQUISITES
     "GLOBALICE file available for download for ${CYCLE_TIME}"

%OUTPUTS
    "GLOBALICE file ready for ${CYCLE_TIME}"
