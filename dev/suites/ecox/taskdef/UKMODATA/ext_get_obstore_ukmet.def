# THIS IS A CYLC TASK CLASS DEFINITION FILE

%TASK
    ext_get_obstore_ukmet, e_g_o_uk

%DESCRIPTION
    Get the UK MetOffice obstore file

%TYPE
    free, sequential

%OWNER
    ecoconnect

%HOURS
    0,6,12,18

%ENVIRONMENT
    HH  ${CYCLE_TIME:8:2}
    SRCE    ftpops.metoffice.gov.uk
    SRCE_LOC    ~/
    DEST_LOC    ${HOME}/output
    FILENAME    qwq3${HH}.${CYCLE_TIME}.obstore.tar.gz
    SRCE_USER   niwa
    SERVICE ext_get_obstore_ukmet
    KEEP    1
    FAST    1
    FILEOUT qwq3${HH}_${CYCLE_TIME}_obstore.tar.gz
    TIMEOUT 45
    CHECKSUM    1
    CHECKFILE   ${CYCLE_TIME}_obstore_checksum.txt
    
%COMMAND
    cylc-wrapper file_transfer_ftp.sh
                                
%PREREQUISITES
    "OPS Obstore files available for download for ${CYCLE_TIME}"

%OUTPUTS
    "OPS Obstore files downloaded for ${CYCLE_TIME}"
