# This is the Coverage.py configuration file. This is used by CI when running
# the tests and collecting coverage

[run]
branch = True
cover_pylib = False
concurrency = thread
data_file = .coverage
disable_warnings =
    trace-changed
    module-not-python
    module-not-imported
    no-data-collected
    module-not-measured
omit =
    tests/*
    */cylc/flow/*_pb2.py
parallel = True
source = ./cylc
timid = False

[report]
exclude_lines =
    pragma: no cover
    ^\s*raise NotImplementedError\b
    ^\s*return NotImplemented\b
    ^\s*if TYPE_CHECKING:
    ^\s*@overload( |$)
fail_under = 0
ignore_errors = False
omit =
    tests/*
    */cylc/flow/*_pb2.py
precision = 2
show_missing = False
skip_covered = False
sort = Name

[html]
directory = htmlcov


[xml]
output = coverage.xml
package_depth = 99
