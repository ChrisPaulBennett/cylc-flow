%NAME
    forecast

%DESCRIPTION
    Forecast model. 
    Generates restart files for the next cycle only.
    Depends on external input data.

%TYPE
    tied

%CYCLES
    0,6,12,18

%TASK
    forecast.sh

%ENVIRONMENT
    NEXT_CYCLE_TIME $(CYCLE_TIME + 6)

%PREREQUISITES
    "external data ready for $(CYCLE_TIME)"

%ESTIMATED_RUN_TIME
    50 min

%ESTIMATED_RESTART_OUTPUT_TIMES
    49 min

%OUTPUTS
    50 min: "forecast output ready for $(CYCLE_TIME)"
