    15 min, 30 min, 45 min, 59 min

%OUTPUTS
    10 min: "IAU start dump ready for $(CYCLE_TIME + 6)"
    12 min: "Cx background file ready for $(CYCLE_TIME + 6)"
    55 min: "forecast diagnostics files ready for $(CYCLE_TIME)"
