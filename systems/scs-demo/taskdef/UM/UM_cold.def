%NAME
    UM_cold

%DESCRIPTION
    Oneoff forecast from UM global dump to generate NZ warm start input 
    files (IAU start dump, Cx background). 

%TYPE
    free_task, oneoff

%COTEMPORAL_DEPENDANTS_ONLY
    True

%VALID_HOURS
    6

%EXTERNAL_TASK
    UM_nz_coldstart.sh

%RUN_LENGTH_MINUTES
    15

%PREREQUISITES
    global model dump ready for $(MY_REFERENCE_TIME)

%OUTPUTS
    10: IAU start dump ready for $(MY_REFERENCE_TIME)
    10: Cx background file ready for $(MY_REFERENCE_TIME)
    8: UM_nz restart files ready for $(MY_REFERENCE_TIME)
