# THIS IS A CYLC TASK DEFINITION FILE


%NAME
    g_gbl_cold

%DESCRIPTION
    Get the downloaded UM global dump for a cold start this cycle

%TYPE
    free, contact, oneoff

%NO_NONCOTEMPORAL_DEPENDANTS
    True

%CONTACT_DELAY
    4.0 hr

%CYCLES
    6

%TASK
    file_transfer.sh

%ENVIRONMENT
    TARG ftpserver:/download/globaldump.$(CYCLE_TIME).um
    DEST hpc:/oper/input/

%PREREQUISITES
    # NONE

%ESTIMATED_RUN_TIME
    2 min

%OUTPUTS
    2 min: "global model dump ready for $(CYCLE_TIME)"
