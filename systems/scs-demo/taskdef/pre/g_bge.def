# THIS IS A CYLC TASK DEFINITION FILE


%NAME
    g_bge

%DESCRIPTION
    Get the downloaded NZLAM bgerr file for this cycle

%TYPE
    free, contact

%CONTACT_DELAY
    4.0 hr

%CYCLES
    0,6,12,18

%TASK
    file_transfer.sh

%ENVIRONMENT
    TARG ftpserver:/download/bgerr.$(CYCLE_TIME).um
    DEST hpc:/oper/input/

%STARTUP_PREREQUISITES
    "startup%$(CYCLE_TIME) finished"

%PREREQUISITES
    # None

%ESTIMATED_RUN_TIME
    2 min

%OUTPUTS
    2 min: "bgerr file ready for $(CYCLE_TIME)"
