# THIS IS A CYLC TASK DEFINITION FILE


%NAME
    g_lbc

%DESCRIPTION
    Get the downloaded NZ LBC file for the next two cycles

%TYPE
    free, contact

%CONTACT_DELAY
    4.0 hr

%CYCLES
    0,12

%TASK
    file_transfer.sh

%ENVIRONMENT
    TARG ftpserver:/download/lbc_$(CYCLE_TIME - 6).um
    DEST hpc:/oper/input/

%STARTUP_PREREQUISITES
    # make sure this task waits on the oneoff 06Z startup task 
    0  | "startup%$(CYCLE_TIME - 18) finished"
    12 | "startup%$(CYCLE_TIME - 6) finished"

%PREREQUISITES
    # NONE

%ESTIMATED_RUN_TIME
    2 min

%OUTPUTS
    2 min: "file lbc_$(CYCLE_TIME).um ready"
