%NAME
    forecast

%DESCRIPTION
    Forecast model. 
    Generates restart files for the next cycle only.
    Depends on external input data.

%TYPE
    tied

%CYCLES
    0,6,12,18

%TASK
    forecast.sh

%REMOTE_HOST
    $SUPERCOMPUTER

%OWNER
    $REMOTE_FC_USER

%ENVIRONMENT
    NEXT_CYCLE_TIME $(CYCLE_TIME + 6)
    CYLC_DIR $REMOTE_CYLC_DIR
    CYLC_SYSTEM_DIR $REMOTE_CYLC_SYSTEM_DIR

%PREREQUISITES
    "forecast input ready for $(CYCLE_TIME)"

%N_RESTART_OUTPUTS
    1

%OUTPUTS
    "forecast output ready for $(CYCLE_TIME)"
