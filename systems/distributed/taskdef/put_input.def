%NAME
    put_input

%DESCRIPTION
    Copy forecast model import to the remote machine that the forecast
    model runs on. 

%TYPE
    free

%CYCLES
    0,6,12,18

%TASK
    cylc-wrapper

%ENVIRONMENT
    WRAP file_transfer.sh
    TARG $CYLC_TMPDIR/ext/output/$(CYCLE_TIME)/extdata
    DEST $SUPERCOMPUTER:$CYLC_REMOTE_TMPDIR/input/$(CYCLE_TIME)/extdata

%PREREQUISITES
    "external data ready for $(CYCLE_TIME)"

%ESTIMATED_RUN_TIME
    10 min

%OUTPUTS
    10 min: "forecast input ready for $(CYCLE_TIME)"

