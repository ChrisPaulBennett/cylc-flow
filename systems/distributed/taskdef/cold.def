%NAME
    cold

%DESCRIPTION
    Provides the initial restart prerequisites for the forecast model.
    Depends on the system startup task.

%TYPE
    free, oneoff

%CYCLES
    0,6,12,18

%NO_NONCOTEMPORAL_DEPENDANTS
    True

%TASK
    cold.sh

%REMOTE_HOST
    $SUPERCOMPUTER

%ENVIRONMENT
    CYLC_REMOTE_TMPDIR /tmp/$USER/forecast
    PATH $PATH:$HOME/cylc/bin:$HOME/cylc/systems/distributed/scripts
    PYTHONPATH $PYTHONPATH:$HOME/cylc/src

%STARTUP_PREREQUISITES
    "startup%$(CYCLE_TIME) finished" 

%ESTIMATED_RUN_TIME
    10 min

%OUTPUTS
    7 min: "forecast restart files ready for $(CYCLE_TIME)"
