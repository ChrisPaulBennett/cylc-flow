%TASK
    get_output

%DESCRIPTION
    retrieve the forecast model output file from the model output
    directory and move it to where the post processing system expects it
    to be.

%TYPE
    free

%HOURS
    0,6,12,18

%COMMAND
    cylc-wrapper _file-transfer

%ENVIRONMENT
    SRCE $REMOTE_FC_USER@$SUPERCOMPUTER:$CYLC_REMOTE_TMPDIR/output/$(CYCLE_TIME)/forecast.nc
    DEST $CYLC_TMPDIR/postproc/input/$(CYCLE_TIME)/forecast.nc

%PREREQUISITES
    "forecast output ready for $(CYCLE_TIME)"

%OUTPUTS
    "forecast output at $(CYCLE_TIME) ready for postprocessing"

