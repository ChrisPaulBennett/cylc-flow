%TASK
    put_input

%DESCRIPTION
    Copy forecast model import to the remote machine that the forecast
    model runs on. 

%TYPE
    free

%HOURS
    0,6,12,18

%COMMAND
    cylc-wrapper

%ENVIRONMENT
    WRAP _file-transfer
    SRCE $CYLC_TMPDIR/ext/output/$(CYCLE_TIME)/extdata
    DEST $REMOTE_FC_USER@$SUPERCOMPUTER:$CYLC_REMOTE_TMPDIR/input/$(CYCLE_TIME)/extdata

%PREREQUISITES
    "external data ready for $(CYCLE_TIME)"

%OUTPUTS
    "forecast input ready for $(CYCLE_TIME)"

