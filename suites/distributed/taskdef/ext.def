    free, contact

%CONTACT_DELAY
    1.0 hr

%HOURS
    0,6,12,18

%COMMAND
    ext.sh

%COLDSTART_PREREQUISITES
    "startup%$(CYCLE_TIME) finished"

%OUTPUTS
    "external data ready for $(CYCLE_TIME)"
