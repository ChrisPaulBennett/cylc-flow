%TASK
    cold

%DESCRIPTION
    Provides the initial restart prerequisites for the forecast model.
    Depends on the suite startup task.

%TYPE
    free, oneoff

%HOURS
    0,6,12,18

%COMMAND
    cold.sh

%REMOTE_HOST
    $SUPERCOMPUTER

%OWNER
    $REMOTE_FC_USER

%ENVIRONMENT
    CYLC_DIR $REMOTE_CYLC_DIR
    CYLC_SUITE_DIR $REMOTE_CYLC_SUITE_DIR

%COLDSTART_PREREQUISITES
    "startup%$(CYCLE_TIME) finished" 

%OUTPUTS
    "forecast restart files ready for $(CYCLE_TIME)"
