%NAME
    foo

%DESCRIPTION
    Does sweet F.A.

%TYPE
    free, sequential

%CYCLES
    0,6,12,18

%TASK
    cylc-wrapper

%ENVIRONMENT
    WRAP echo

    TASK_ONE   bar
    TASK_TWO   $GLOBAL_TWO
    TASK_THREE   $TASK_TWO

%EXTRA_SCRIPTING
    # stay in "submitted" state for 5 seconds to slow down cycling
    sleep 5

%COMMANDLINE
    $TASK_THREE $( cylcutil time-calc TEMPLATE ) 

%OUTPUTS
    "Hello from $(CYCLE_TIME) to $(CYCLE_TIME+6)"
