%TASK
    FCModel, fcm

%DESCRIPTION
    Represents a warm-cycled forecast model, it waits on real time
    obs and its own restart file, and generates restart files for the
    next cycle.

%TYPE
    tied

%HOURS
    0,6,12,18

%COMMAND
    # None
    /bin/true

%PREREQUISITES
    "obs data ready for $(CYCLE_TIME)"

%SUICIDE_PREREQUISITES
    # self destruct if the forecast recovery tasks completes
    # successfully (and it only runs if this task fails!)
    "FCModelRecover%$(CYCLE_TIME) finished"

%N_RESTART_OUTPUTS
    1
