%NAME
    FCModelRecover, rec

%DESCRIPTION
    E.g. short time forecast to run if the main forecast model
    configuration fails due to a numerical instability. Generates same
    output as the main model.

%TYPE
    # this is not a tied task - it generates restart outputs for use by
    # the main model, not for its own use.
    free

%CYCLES
    0,6,12,18

%TASK
    # None
    /bin/true

%PREREQUISITES
    "FCModel restart files ready for $(CYCLE_TIME)"
    "FCModel%$(CYCLE_TIME) failed"

%SUICIDE_PREREQUISITES
    # self destruct if the main model completes successfully
    "FCModel%$(CYCLE_TIME) finished"

%OUTPUTS
    "FCModel restart files ready for $(CYCLE_TIME+6)"
