# THIS IS A CYLC TASK DEFINITION FILE


%TASK
    g_lbc_cold

%DESCRIPTION
    Get the downloaded NZ LBC file for the current cycle
    Only required at cold start startup.

%TYPE
    free, contact, oneoff

%CONTACT_DELAY
    4.0 hr

%INTERCYCLE
    True

%FOLLOW_ON
    g_lbc

%HOURS
    6

%COMMAND
    file_transfer.sh

%ENVIRONMENT
    TARG ftpserver:/download/lbc_$(CYCLE_TIME - 6).um
    DEST hpc:/oper/input/

%COLDSTART_PREREQUISITES
    "startup%$(CYCLE_TIME) finished"

%PREREQUISITES
    # NONE

%OUTPUTS
    "file lbc_$(CYCLE_TIME - 6).um ready"
