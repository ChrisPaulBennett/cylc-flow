# THIS IS A CYLC TASK DEFINITION FILE


%NAME
    UM_nz

%DESCRIPTION
    NZ warm start forecast

%TYPE
    tied

%CYCLES
    0,6,12,18

%TASK
    UM_nz.sh

%PREREQUISITES
    "VAR increments ready for $(CYCLE_TIME)"
    ### "IAU start dump ready for $(CYCLE_TIME)"
    if HOUR in 0,12:
        "file lbc_$(CYCLE_TIME - 12).um ready"
    if HOUR in 6,18:
        "file lbc_$(CYCLE_TIME - 6).um ready"

%N_RESTART_OUTPUTS
    if HOUR in 6,18:
        4
    if HOUR in 0,12:
        1

%OUTPUTS
    ### "IAU start dump ready for $(CYCLE_TIME + 6)"
    "Cx background file ready for $(CYCLE_TIME + 6)"
    if HOUR in 6,18:
        "forecast diagnostics files ready for $(CYCLE_TIME)"
