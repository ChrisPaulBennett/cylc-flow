#!jinja2
[scheduling]
    [[dependencies]]
        graph = foo
[runtime]
    [[foo]]
        command scripting = echo 'It is a good test.'
{% if CYLC_TEST_HOST %}
        [[[remote]]]
            host = {{CYLC_TEST_HOST}}
{% endif %}
{% if CYLC_TEST_JOB_SUBMIT_METHOD %}
        [[[job submission]]]
            method = {{CYLC_TEST_JOB_SUBMIT_METHOD}}
{% if CYLC_TEST_JOB_SUBMIT_METHOD == "loadleveler" %}
        [[[directives]]]
            class = serial
            job_type = serial
            notification = never
            wall_clock_limit = 120,60
{% if CYLC_TEST_DIRECTIVES %}
            {{CYLC_TEST_DIRECTIVES}}
{% endif %}
{% endif %}
{% endif %}
