[meta]
    title = queue size reload test
    description = """change the size of a queue via a reload."""

[scheduling]
    [[ queues ]]
        [[[ q_fam ]]]
            limit = 5 # marker
            members = reloader, FAM
    [[graph]]
        R1 = """reloader:start => FAM
                   reloader => monitor"""
[runtime]
    [[FAM]]
        script = sleep 10
    [[a,b,c,d,e,f,g,h,i,j,k,l]]
        inherit = FAM
    [[reloader]]
        script = """
# change the limit on number of members of q_fam:
perl -pi -e 's/(limit = )5( # marker)/\1 3 \2/' $CYLC_WORKFLOW_RUN_DIR/flow.cylc
# reload
cylc reload "${CYLC_WORKFLOW_NAME}"
cylc__job__poll_grep_workflow_log 'Reload completed'
"""
    [[monitor]]
        script = """
        cylc__job__wait_cylc_message_started
        while true; do
            TASKS=$(cylc workflow-state $CYLC_WORKFLOW_NAME -S running | wc -l)
            if ((TASKS > 4)); then
                break
            fi
            sleep 1
            SUCCEEDED=$(cylc workflow-state $CYLC_WORKFLOW_NAME -S succeeded | wc -l)
            if ((SUCCEEDED==13)); then
                break
            fi
            sleep 1
        done
        if ((TASKS > 3)); then
            false
        else
            true
        fi
"""
