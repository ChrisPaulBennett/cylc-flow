#!jinja2

[scheduler]
    UTC mode = True

[scheduling]
    [[graph]]
        R1 = """
            no_settings
            upgradeable_cylc7_settings
        """

[runtime]
    [[root]]
        script = true

    [[no_settings]]

    [[upgradeable_cylc7_settings]]
        script = echo "The hostname is $(hostname -f)"
        [[[remote]]]
            host = {{CYLC_TEST_HOST}}
