#!jinja2

[scheduler]
    UTC mode = True

[scheduling]
    cycling mode = integer
    initial cycle point = 1
    final cycle point = 2
    [[graph]]
        P1 = """
            no_settings & t1 & t2 => fin
        """

[runtime]
    [[root]]
        script = true

    [[no_settings, fin]]

    [[t1]]
        script = test {{CYLC_TEST_HOST_FQDN}} == "$(hostname -f)"
        [[[remote]]]
            host = {{CYLC_TEST_HOST}}

    [[T2]]
        script = test {{CYLC_TEST_HOST_FQDN}} == "$(hostname -f)"
        [[[remote]]]
            host = {{CYLC_TEST_HOST}}

    [[t2]]
        inherit = T2
