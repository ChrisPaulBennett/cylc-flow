[cylc]
   [[reference test]]
       required run mode = live
       live mode suite timeout = 1.0 # minutes
[scheduling]
    initial cycle time = 2013013000
    final cycle time = 2013020200
    runahead limit = 24 # enforce sequential running
    [[dependencies]]
        # (this triggers a monthly task off the last daily task each month)
        [[[00]]]
            graph = """
                daily
            daily[T-24] => dummy""" # marker1
        [[[Monthly(201001,1)]]]
            graph = "dummy => monthly" # marker2
[runtime]
    [[root]]
        command scripting = "sleep 1"
